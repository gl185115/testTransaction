<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>RES Web Store Server</display-name>
  <servlet>
    <servlet-name>resTransaction</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>
        ncr.res.mobilepos.authentication.resource,
        ncr.res.mobilepos.barcode.resource,
        ncr.res.mobilepos.buyadditionalinfo.resource,
        ncr.res.mobilepos.cardinfo.resource,
        ncr.res.mobilepos.cardinfo.resource,
        ncr.res.mobilepos.cashAbstract.resource,
        ncr.res.mobilepos.cashaccount.resource,
        ncr.res.mobilepos.classinfo.resource,
        ncr.res.mobilepos.console.resource,
        ncr.res.mobilepos.credential.resource,
        ncr.res.mobilepos.customerSearch.resource,
        ncr.res.mobilepos.customeraccount.resource,
        ncr.res.mobilepos.customerclass.resource,
        ncr.res.mobilepos.department.resource,
        ncr.res.mobilepos.deviceinfo.resource,
        ncr.res.mobilepos.devicelog.resource,
        ncr.res.mobilepos.discountplaninfo.resource,
        ncr.res.mobilepos.emergentitem.resource,
        ncr.res.mobilepos.eventlog.resource,
        ncr.res.mobilepos.exception.provider,
        ncr.res.mobilepos.forwarditemlist.resource,
        ncr.res.mobilepos.futurePay.resource,
        ncr.res.mobilepos.journalization.resource,
        ncr.res.mobilepos.line.resource,
        ncr.res.mobilepos.mastermaintenance.resource,
        ncr.res.mobilepos.nationalityinfo.resource,
        ncr.res.mobilepos.networkreceipt.resource,
        ncr.res.mobilepos.offlinecredit.resource,
        ncr.res.mobilepos.pointserver.resource,
        ncr.res.mobilepos.pricing.resource,
        ncr.res.mobilepos.promotion.resource,
        ncr.res.mobilepos.queuebuster.resource,
        ncr.res.mobilepos.queuesignature.resource,
        ncr.res.mobilepos.report.resource,
        ncr.res.mobilepos.searchapi.resource,
        ncr.res.mobilepos.settlement.resource,
        ncr.res.mobilepos.softwareinfo.resource,
        ncr.res.mobilepos.store.resource,
        ncr.res.mobilepos.systemconfiguration.resource,
        ncr.res.mobilepos.systemsetting.resource,
        ncr.res.mobilepos.taxrate.resource,
        ncr.res.mobilepos.tenderinfo.resource,
        ncr.res.mobilepos.test.resource,
        ncr.res.mobilepos.giftcard.resource,
        ncr.res.mobilepos.tillinfo.resource,
        ncr.res.mobilepos.webserviceif.resource,
        ncr.res.mobilepos.point.resource,
        ncr.res.mobilepos.uiconfig.resource,
        ncr.res.mobilepos.creditcard.resource,
        ncr.res.mobilepos.initialization.resource,
        ncr.res.mobilepos.poslogstatus.resource,
        ncr.res.mobilepos.appserver.resource,
        ncr.res.mobilepos.posmailinfo.resource,
        ncr.res.mobilepos.employee.resource
    </param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.spi.container.ResourceFilters</param-name>
      <param-value>ncr.res.mobilepos.resourcefilter.CacheFilterFactory</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>resTransaction</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>User Basic Authentication</web-resource-name>
      <url-pattern>/rest/POINTAPI/*</url-pattern>
      <url-pattern>/rest/QueueSignature/*</url-pattern>
      <url-pattern>/rest/QueueSuspend/*</url-pattern>
      <url-pattern>/rest/SystemSettings/DateSettings/*</url-pattern>
      <url-pattern>/rest/SystemSettings/ping</url-pattern>
      <url-pattern>/rest/barcode/*</url-pattern>
      <url-pattern>/rest/cashaccount/*</url-pattern>
      <url-pattern>/rest/credential/changepasscode/*</url-pattern>
      <url-pattern>/rest/credential/create</url-pattern>
      <url-pattern>/rest/credential/createoperator/*</url-pattern>
      <url-pattern>/rest/credential/delete</url-pattern>
      <url-pattern>/rest/credential/detail</url-pattern>
      <url-pattern>/rest/credential/groups/*</url-pattern>
      <url-pattern>/rest/credential/list/*</url-pattern>
      <url-pattern>/rest/credential/maintenance</url-pattern>
      <url-pattern>/rest/credential/reset</url-pattern>
      <url-pattern>/rest/creditauthorization/*</url-pattern>
      <url-pattern>/rest/customerSearch/*</url-pattern>
      <url-pattern>/rest/futurePay/*</url-pattern>
      <url-pattern>/rest/customeraccount/*</url-pattern>
      <url-pattern>/rest/departmentinfo/detail</url-pattern>
      <url-pattern>/rest/deviceinfo/add</url-pattern>
      <url-pattern>/rest/deviceinfo/delete/*</url-pattern>
      <url-pattern>/rest/deviceinfo/getallprinters</url-pattern>
      <url-pattern>/rest/deviceinfo/link/*</url-pattern>
      <url-pattern>/rest/deviceinfo/list/*</url-pattern>
      <url-pattern>/rest/deviceinfo/listbyname/*</url-pattern>
      <url-pattern>/rest/deviceinfo/maintenance</url-pattern>
      <url-pattern>/rest/deviceinfo/printer/*</url-pattern>
      <url-pattern>/rest/deviceinfo/setauthorizationlink</url-pattern>
      <url-pattern>/rest/deviceinfo/setlinkposterminalid</url-pattern>
      <url-pattern>/rest/deviceinfo/setprinterid</url-pattern>
      <url-pattern>/rest/deviceinfo/setqueuebusterlink</url-pattern>
      <url-pattern>/rest/deviceinfo/setsignaturelink</url-pattern>
      <url-pattern>/rest/devicelog/*</url-pattern>
      <url-pattern>/rest/uiconfig/uiconfigMaintenance</url-pattern>
      <url-pattern>/rest/discountplaninfo/*</url-pattern>
      <url-pattern>/rest/eventlog/*</url-pattern>
      <url-pattern>/rest/line/*</url-pattern>
      <url-pattern>/rest/pricing/getpicklistitems</url-pattern>
      <url-pattern>/rest/pricing/getItemPrice</url-pattern>
      <url-pattern>/rest/pricing/*/*</url-pattern>
      <url-pattern>/rest/promotion/*</url-pattern>
      <url-pattern>/rest/report/*</url-pattern>
      <url-pattern>/rest/searchapi/*</url-pattern>
      <url-pattern>/rest/storeinfo/!(getcmpresetstoreinfo)</url-pattern>
      <url-pattern>/rest/systemconfiguration/maintenance</url-pattern>
      <url-pattern>/rest/systemconfiguration/setcompanyid</url-pattern>
      <url-pattern>/rest/taxrate/gettaxrate</url-pattern>
      <url-pattern>/rest/test/*</url-pattern>
      <url-pattern>/rest/till/*</url-pattern>
      <url-pattern>/rest/transaction/*</url-pattern>
      <url-pattern>/rest/WebServiceIf/*</url-pattern>
      <url-pattern>/rest/ItemForward/*</url-pattern>
      <url-pattern>/rest/creditcard/*</url-pattern>
      <url-pattern>/rest/poslogstatus/*</url-pattern>
      <url-pattern>/rest/servertable/*</url-pattern>
      <url-pattern>/rest/posmailinfo/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>NCR</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-role>
    <role-name>NCR</role-name>
  </security-role>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Web API Credential</realm-name>
  </login-config>
  <resource-ref>
    <description>Primary database</description>
    <res-ref-name>jdbc/ENTSVR</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <mapped-name>jdbc/ENTSVR</mapped-name>
  </resource-ref>
  <listener>
    <listener-class>ncr.res.mobilepos.systemconfiguration.property.WebContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
  </listener>
  <env-entry>
    <description>Path to custom Maintenance base directory. This needs '/' at the end.</description>
    <env-entry-name>customMaintenanceBasePath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}/software/ncr/res/custom/</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Path to custom base directory. This needs '/' at the end.</description>
    <env-entry-name>customResourceBasePath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}/software/ncr/res/custom/</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Path to store custom parameter files.</description>
    <env-entry-name>customParamBasePath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}/software/ncr/res/cust/para</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Relative path to schedule.xml from custom base.</description>
    <env-entry-name>scheduleFilePath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>/schedule.xml</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Logger output file</description>
    <env-entry-name>iowPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\log</env-entry-value>
  </env-entry>
  <env-entry>
    <description>UI Console Log File Path</description>
    <env-entry-name>UiConsoleLogPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\log\UiConsoleLog.txt</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Device Log</description>
    <env-entry-name>deviceLogPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\log</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Identification of the Server</description>
    <env-entry-name>serverID</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>A010</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>tracePath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\dbg</env-entry-value>
  </env-entry>
  <env-entry>
    <description>SPM file Path</description>
    <env-entry-name>Journalization/spmPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\log\SPM_DIR</env-entry-value>
  </env-entry>
  <env-entry>
  	<description>POSLog Transfer status column name</description>
  	<env-entry-name>POSLogTransferStatusColumn</env-entry-name>
  	<env-entry-type>java.lang.String</env-entry-type>
  	<env-entry-value>SendStatus1</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>debugLevel</env-entry-name>
    <env-entry-type>java.lang.Integer</env-entry-type>
    <env-entry-value>0</env-entry-value>
  </env-entry>
  <env-entry>
    <env-entry-name>snapPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\log\snap_dir</env-entry-value>
  </env-entry>
  <!-- 螢ｲ荳願｡ｨ繝ｬ繝昴・繝亥茜逕ｨ縺ｮ繝輔ぃ繝ｼ繝槭ャ繝・ML繝輔ぃ繧､繝ｫ -->
  <env-entry>
    <env-entry-name>ReportFormatNewPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\custom\ReportFormatNew.xml</env-entry-value>
  </env-entry>
  <!-- 騾壼ｸｸ雋ｷ荳翫Ξ繧ｷ繝ｼ繝亥茜逕ｨ縺ｮ繝輔ぃ繝ｼ繝槭ャ繝・ML繝輔ぃ繧､繝ｫ -->
  <env-entry>
    <env-entry-name>nrRcptFormatPath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\custom\NormalReceiptFormat.xml</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Default Printer Setting</description>
    <env-entry-name>localPrinter</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\link\systemconfig\interface.xml</env-entry-value>
  </env-entry>
  <!-- fs add start 53mm縺ｨ80mm邏吶・螟画鋤繝輔Λ繧ｰ
       1 is Flag for 53mm receipt paper
       2 is Flag for 80mm receipt paper.-->
  <env-entry>
    <description>Print Paper Length</description>
    <env-entry-name>Printpaperlength</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>2</env-entry-value>
  </env-entry>
  <env-entry>
    <description>Path to store parameter files.</description>
    <env-entry-name>paraBasePath</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>${drive.path}\software\ncr\res\para\</env-entry-value>
  </env-entry>
  <filter>
	<filter-name>compression</filter-name>
	<filter-class>ncr.realgate.servlet.filter.CompressionFilter</filter-class>
  </filter>
  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    <init-param>
      <param-name>cors.allowed.headers</param-name>
      <param-value>Authorization, Origin, Accept, Content-Type</param-value>
    </init-param>
    <init-param>
      <param-name>cors.allowed.methods</param-name>
      <param-value>GET, POST, PUT, DELETE, OPTIONS</param-value>
    </init-param>
    <init-param>
      <param-name>cors.exposed.headers</param-name>
      <param-value>Authorization, Accept, Content-Type</param-value>
    </init-param>
    <init-param>
      <param-name>cors.support.credentials</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>cors.preflight.maxage</param-name>
      <param-value>3600</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>compression</filter-name>
    <servlet-name>resTransaction</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CorsFilter</filter-name>
    <servlet-name>resTransaction</servlet-name>
  </filter-mapping>
</web-app>
